#!/usr/bin/env perl
use warnings;
use strict;

my $stow_dir = "/stow";
chdir $stow_dir or die "Unable to chdir to $stow_dir";
my @dirs = <*>;
foreach my $dir ( @dirs ) {
    if ( -e '.git' ) {
	chdir $dir or warn "Unable to chdir $dir";
	print "==> $dir\n";
	system("git pull");
    }
    chdir $stow_dir or die "Unable to chdir to $stow_dir";
}
