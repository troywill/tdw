#!/usr/bin/env perl
use warnings;
use strict;
# troydwill@gmail.com, June 2010
my $SUDO = &get_sudo();
my $command = "$SUDO pacman @ARGV";

if ( $ARGV[0] eq 'update' ) {
    system ("$SUDO pacman --sync --refresh");
    system ("$SUDO pacman --sync --sysupgrade");
} else {
    print "=> $command\n";
    system $command;
}

sub get_sudo {
    if ( $ENV{"USER"} ne 'root') {
	return '/usr/bin/sudo';
    }	else {
	return '';
    }
}
