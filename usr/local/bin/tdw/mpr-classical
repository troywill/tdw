#!/usr/bin/env perl
use warnings;
use strict;

my $audio_player = 'mplayer';
my $duration = '50:00';
my $playlist = 'http://minnesota.publicradio.org/tools/play/streams/classical.pls';


if (defined($ARGV[0])) {
    $duration = $ARGV[0];
}

my $shell_command = '';

if ( $audio_player eq 'mplayer' ) {
    $shell_command = "${audio_player} -endpos $duration ${playlist} 2>/dev/null | grep ICY";
}

print "=> $shell_command\n";
system $shell_command;
