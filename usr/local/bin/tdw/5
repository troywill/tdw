#!/usr/bin/env perl
use warnings;
use strict;

# The current
my $audio_player = "mplayer -nocache -quiet -endpos 5:00 http://minnesota.publicradio.org/tools/play/streams/the_current.pls 2>/dev/null | grep ICY";

print "What are you going to do? ";
chomp(my $input = <STDIN>);

open(my $fh, ">>", "/tmp/5.txt")
    or die "cannot open > output.txt: $!";
print $fh $input, "\n";


system ( $audio_player );

__END__



#!/bin/sh
audio_player="mplayer"
# http://www.ve3sre.com/streaming3.html
playlist="http://minnesota.publicradio.org/tools/play/streams/classical.pls"
${audio_player} ${playlist}
