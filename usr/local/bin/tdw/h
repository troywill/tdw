#!/usr/bin/env perl
use warnings;
use strict;

my $SUDO = &get_sudo();

quit_chromium();

&run_command( 'sync' );
&run_command( "qdbus org.kde.ksmserver /KSMServer org.kde.KSMServerInterface.logout 0 0 0 &");
&run_command( "$SUDO /sbin/halt" );

sub run_command {
    my $command = shift;
    print "=> $command";
    system $command;
    print "\n";
}

sub get_sudo {
    if ( $ENV{"USER"} ne 'root') {
	return '/usr/bin/sudo';
    }	else {
	return '';
    }
}

sub quit_chromium {
    my $pid = `ps aux | grep chromium | grep -v grep | head --lines=1 | cut -c 10-14`;
    if ( $pid ) {
	chomp( $pid );
	print "Sending TERM signal to chromium process $pid...";
	system( "kill -TERM $pid" );
	sleep 1;
    }
}
