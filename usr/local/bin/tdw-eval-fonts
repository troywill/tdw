#!/usr/bin/env perl
use warnings;
use strict;

open( my $out, ">>", '/tmp/nice_fonts' ) or die;

chdir '/usr/share/kbd/consolefonts';
my @files = <*>;

foreach my $file ( @files ) {
    print "$file\n";
    system("setfont $file -16");
    system("showconsolefont");
    chomp ( my $input = <STDIN> );
    print $out $file if $input eq 's';
}

close $out;
