#!/usr/bin/env perl
use warnings;
use strict;

# Use sudo if we are not root
my $SUDO = '';
$SUDO = 'sudo' if ( $ENV{'USER'} ne 'root' );
my $VERBOSE='--verbose';

system("$SUDO fdisk -l /dev/sdb 2>/dev/null");
system("$SUDO fdisk -l /dev/sdc 2>/dev/null");
system("$SUDO fdisk -l /dev/sdd 2>/dev/null");
system("$SUDO mount -v /dev/disk/by-label/thumb_root /mnt/thumb_root");
system("$SUDO pacman --sync --refresh");
system("$SUDO pacman --sync --sysupgrade");
system("$SUDO pacman --sync --clean");
system("$SUDO umount -v /dev/disk/by-label/thumb_root /mnt/thumb_root");
print "Done!\n";
__END__

