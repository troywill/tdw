#!/usr/bin/env perl
use warnings;
use strict;

my $device = '/dev/disk/by-label/thumb_root';

# Use sudo if we are not root
my $SUDO = '';
$SUDO = 'sudo' if ( $ENV{'USER'} ne 'root' );
my $VERBOSE='--verbose';

&mount_thumb_drive;

system("$SUDO pacman --sync --refresh");
system("$SUDO pacman --sync --sysupgrade");

sub mount_thumb_drive {
    print "=>$device<=\n";
    unless ( -l $device ) {
	die "Do not see $device";
    }
    system("$SUDO mount -v /dev/disk/by-label/thumb_root /mnt/thumb_root");
}


__END__
