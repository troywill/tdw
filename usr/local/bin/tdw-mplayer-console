#!/usr/bin/env perl
use warnings;
use strict;

my $file = $ARGV[0] or die "Please suppy a file name";
my $details = `file $file`;
$details =~ /.*?(\d+) x (\d+)/;
my $x = $1;
my $y = $2;
print "[$x][$y]";
my $vertical = 1024 /  $x * $y;
$vertical = int($vertical);

system("mplayer -really-quiet -zoom -x 1024 -y $vertical $file");
